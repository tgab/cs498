/**
 * 8-way demultiplexor.  The 3-bit sel input selects the output to which 
 * the in input will be channeled: (000 to a, 001 to b, ..., 111 to h).
 * The other outputs are set to 0.
 */

CHIP DMux8Way {

    IN  in, sel[3];
    OUT a, b, c, d, e, f, g, h;

    PARTS:
    DMux(in=in, sel=sel[2], a=x, b=y);
    DMux4Way(in=x, sel=sel[0..1], a=a, b=b, c=c, d=d);
    DMux4Way(in=y, sel=sel[0..1], a=e, b=f, c=g, d=h);
}

